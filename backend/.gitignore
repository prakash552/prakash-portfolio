const Message = require('../models/Message');
const nodemailer = require('nodemailer');

exports.handleContactForm = async (req, res) => {
  console.log("ğŸ“© [DEBUG] Contact Form API Hit");
  console.log("ğŸ“¦ Request Body:", req.body);

  const { name, email, message } = req.body;

  // âœ… Check for empty fields
  if (!name || !email || !message) {
    console.error("âš ï¸ Missing required fields");
    return res.status(400).json({
      success: false,
      message: "All fields are required."
    });
  }

  try {
    // âœ… Save message to MongoDB
    console.log("ğŸ—„ [DEBUG] Saving message to MongoDB...");
    const newMsg = new Message({ name, email, message });
    const saved = await newMsg.save();
    console.log("âœ… [DEBUG] Message saved:", saved);

    // âœ… Setup Nodemailer
    console.log("ğŸ“§ [DEBUG] Setting up Nodemailer...");
    const transporter = nodemailer.createTransport({
      service: 'gmail',
      auth: {
        user: process.env.EMAIL_USER,
        pass: process.env.EMAIL_PASS
      },
      tls: { rejectUnauthorized: false }
    });

    // âœ… Send email
    console.log("ğŸ“¨ [DEBUG] Sending email...");
    const emailResult = await transporter.sendMail({
      from: email,
      to: process.env.TO_EMAIL,
      subject: `ğŸ“¬ New Contact Message from ${name}`,
      text: `
You have received a new message from your portfolio contact form:

ğŸ‘¤ Name: ${name}
ğŸ“§ Email: ${email}

ğŸ’¬ Message:
${message}
      `
    });
    console.log("âœ… [DEBUG] Email sent:", emailResult.response);

    // âœ… Send success response
    res.status(200).json({
      success: true,
      message: 'Message saved to DB and email sent successfully.'
    });

  } catch (err) {
    console.error("âŒ [DEBUG] SERVER ERROR:", err);
    res.status(500).json({
      success: false,
      message: 'Server error while processing your request.',
      error: err.message // for debugging in frontend
    });
  }
};
